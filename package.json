{
	"name": "vtexhelp-nav-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": {
		"vtexhelp-nav-cli": "dist/cli.js",
		"vtex-nav": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc && mkdir -p dist/config dist/schemas && (cp -r source/config/*.json dist/config/ || true) && (cp -r source/schemas/*.json dist/schemas/ || true) && chmod +x dist/cli.js",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"start": "node dist/cli.js",
		"cli": "node dist/cli.js",
		"nav:gen": "node dist/cli.js gen",
		"nav:view": "node dist/cli.js view",
		"prepare": "sh -c 'if [ -d dist ]; then echo dist exists, skipping build; else echo dist missing, attempting build; npm run build || true; fi'",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^1.0.0",
		"ajv": "^8.17.1",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"gray-matter": "^4.0.3",
		"ink": "^4.1.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
